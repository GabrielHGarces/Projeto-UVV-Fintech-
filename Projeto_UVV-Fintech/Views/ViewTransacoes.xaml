<Window x:Class="Projeto_UVV_Fintech.Views.ViewTransacoes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projeto_UVV_Fintech.Views"
        mc:Ignorable="d"
        Title="ViewTransacoes" Height="535" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Height="75" Margin="0,10,0,0">
            <Button Content="Gerenciador de Transações" Height="43" Margin="15" Width="345" Cursor="Hand" Click="Button_Click"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,90,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">
                <Grid Width="166">
                    <Label Content="ID Transação" HorizontalAlignment="Left" Margin="0,-18,0,0" VerticalAlignment="Top" Height="27"/>
                    <TextBox x:Name="IdInput" Text="" Height="21" Margin="5,5,5,5" PreviewTextInput="NumericTextBox_PreviewTextInput" DataObject.Pasting="NumericTextBox_Pasting" TextChanged="IdInput_TextChanged"/>
                </Grid>
                <Grid Width="166">
                    <Label Content="Tipo" HorizontalAlignment="Left" Margin="0,-18,0,0" VerticalAlignment="Top" Height="27"/>
                    <ComboBox x:Name="TipoOpcoes" HorizontalAlignment="Center" VerticalAlignment="Center" Width="154" SelectionChanged="Type_SelectionChanged">
                        <ComboBoxItem Content="Todos" IsSelected="True"/>
                        <ComboBoxItem Content="Depósito"/>
                        <ComboBoxItem Content="Saque"/>
                        <ComboBoxItem Content="Transferência"/>
                    </ComboBox>
                </Grid>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">
                <Grid Width="166">
                    <Label Content="Conta Remetente" HorizontalAlignment="Left" Margin="0,-18,0,0" VerticalAlignment="Top" Height="27"/>
                    <TextBox Text="" Height="21" Margin="5,5,5,5" PreviewTextInput="NumericTextBox_PreviewTextInput" DataObject.Pasting="NumericTextBox_Pasting"/>
                </Grid>
                <Grid Width="166">
                    <Label Content="Conta Destinatário" HorizontalAlignment="Left" Margin="0,-18,0,0" VerticalAlignment="Top" Height="27"/>
                    <TextBox Text="" Height="21" Margin="5,5,5,5" PreviewTextInput="NumericTextBox_PreviewTextInput" DataObject.Pasting="NumericTextBox_Pasting"/>
                </Grid>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">
                <Grid Width="166">
                    <Button x:Name="ValorMaiorQue" Content="Menor Que" Margin="5,5,5,5" Height="21" Cursor="Hand" Click="ValorMaiorQue_Click"/>
                </Grid>
                <Grid Width="166">
                    <Label Content="Valor" HorizontalAlignment="Left" Margin="0,-18,0,0" VerticalAlignment="Top" Height="27"/>
                    <TextBox Text="R$ 0,00" Height="21" Margin="5,5,5,5" x:Name="NumericTextBox" PreviewTextInput="NumericTextBox_PreviewTextInput" DataObject.Pasting="NumericTextBox_Pasting" LostFocus="NumericTextBox_LostFocus" GotFocus="NumericTextBox_GotFocus"/>
                </Grid>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">
                <Grid Width="166">
                    <Button x:Name="DataMaiorQue" Content="Maior Que" Margin="5,5,5,5" Height="21" Cursor="Hand" Click="DataMaiorQue_Click"/>
                </Grid>
                <Grid Width="166">
                    <Label Content="Data e Hora" HorizontalAlignment="Left" Margin="0,-18,0,0" VerticalAlignment="Top" Height="27"/>
                    <TextBox Text="" Height="21" Margin="5,5,5,5"/>
                </Grid>
            </StackPanel>


        </StackPanel>


        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Height="246" Width="756" Margin="0,259,0,0">
            <Button x:Name="SearchButton" Content="Pesquisar" Height="43"  Cursor="Hand" Background="White" Click="SearchButton_Click" Width="187" HorizontalAlignment="Right"/>
            <DataGrid x:Name="TabelaPessoas"
              AutoGenerateColumns="False"
              HeadersVisibility="All"
              CanUserAddRows="False"
              
              IsReadOnly="True" Height="178">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="*" />
                    <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="*" />
                    <DataGridTextColumn Header="Idade" Binding="{Binding Idade}" Width="*" />
                    <DataGridTextColumn Header="Profissão" Binding="{Binding Profissao}" Width="2*" />
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>




    </Grid>
</Window>
