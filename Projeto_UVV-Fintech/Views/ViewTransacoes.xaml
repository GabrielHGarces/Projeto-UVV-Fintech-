<Window x:Class="Projeto_UVV_Fintech.Views.ViewTransacoes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projeto_UVV_Fintech.Views"
        mc:Ignorable="d"
        Title="ViewTransacoes" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Height="75" Margin="0,10,0,0">
            <Button Content="Gerenciador de Transações" Height="43" Margin="15" Width="345" Cursor="Hand" Click="Button_Click"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,90,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">
                <Grid Width="166">
                    <Label Content="ID Transação" HorizontalAlignment="Left" Margin="0,-18,0,0" VerticalAlignment="Top" Height="27"/>
                    <TextBox Text="" Height="21" Margin="5,5,5,5"/>
                </Grid>
                <Grid Width="166">
                    <Label Content="Tipo" HorizontalAlignment="Left" Margin="0,-18,0,0" VerticalAlignment="Top" Height="27"/>
                    <TextBox Text="" Height="21" Margin="5,5,5,5"/>
                </Grid>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">
                <Grid Width="166">
                    <Label Content="Conta Remetente" HorizontalAlignment="Left" Margin="0,-18,0,0" VerticalAlignment="Top" Height="27"/>
                    <TextBox Text="" Height="21" Margin="5,5,5,5"/>
                </Grid>
                <Grid Width="166">
                    <Label Content="Conta Destinatário" HorizontalAlignment="Left" Margin="0,-18,0,0" VerticalAlignment="Top" Height="27"/>
                    <TextBox Text="" Height="21" Margin="5,5,5,5"/>
                </Grid>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">
                <Grid Width="166">
                    <Button x:Name="ValorMaiorQue" Content="Menor Que" Margin="5,5,5,5" Height="21" Cursor="Hand" Click="ValorMaiorQue_Click"/>
                </Grid>
                <Grid Width="166">
                    <Label Content="Valor" HorizontalAlignment="Left" Margin="0,-18,0,0" VerticalAlignment="Top" Height="27"/>
                    <TextBox Text="R$ 0,00" Height="21" Margin="5,5,5,5" x:Name="NumericTextBox" PreviewTextInput="NumericTextBox_PreviewTextInput" DataObject.Pasting="NumericTextBox_Pasting" LostFocus="NumericTextBox_LostFocus" GotFocus="NumericTextBox_GotFocus"/>
                </Grid>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">
                <Grid Width="166">
                    <Button x:Name="DataMaiorQue" Content="Maior Que" Margin="5,5,5,5" Height="21" Cursor="Hand" Click="DataMaiorQue_Click"/>
                </Grid>
                <Grid Width="166">
                    <Label Content="Data e Hora" HorizontalAlignment="Left" Margin="0,-18,0,0" VerticalAlignment="Top" Height="27"/>
                    <TextBox Text="" Height="21" Margin="5,5,5,5"/>
                </Grid>
            </StackPanel>


        </StackPanel>




    </Grid>
</Window>
